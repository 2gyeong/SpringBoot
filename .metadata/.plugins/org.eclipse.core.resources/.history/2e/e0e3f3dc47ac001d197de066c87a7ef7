<html layout:decorate="~{layout}">
	<div layout:fragment="content" class = "container my-3">
	<table class = "table">
		<thead class = "table-dark"> <!--  제목을 처리 -->
	
		<tr>
			<td>번호</td>
			<td>이름</td>
			<td>비밀번호</td>
			<td>이메일</td>
			<td>작성일</td>
			<td>방문수</td>
		</tr>
		</thead>
	
		<tbody>
		<tr th:each="users, loop : ${paging}">
			<td> 
				<a th:href="@{|/users_detail/${users.idx}|}" th:text="${users.name}">[[${users.name}]]</a>
			</td>
			<td th:text="${users.pass}">[[${users.pass}]]</td>
			<td th:text="${users.email}">[[${users.email}]]</td>
			<td th:text="${users.regDate}"> </td>		
			<td th:text="${users.cnt}">[[${users.cnt}]]</td>
		</tr>
	
		<tr th:each="users, loop : ${paging}"> 
		<td th:text="${paging.getTotalElements - (paging.number*paging.size)-loop.index}"> 번호 </td>
		<td> <a th:href="@{|/users_detail/${users.idx}|}">[[${users.name}]] </a></td>
			
		<td> [[ ${#temporals.format(users.regDate, 'yyyy-mm-dd HH:mm')}]] </td>	
	</tr>
		
	</tbody>
	</table>
		 <!--  페이징 처리 시작  -->
	 <div th:if="${!paging.isEmpty()}">
	 	<ul class="pagination justify-content-center">
	 	
	 		<!-- 이전 페이지가 존재하지 않으면 이전에 링크를 비활성화  -->
	 		<li class="page-item" th:classappend="${!paging.hasPrevious} ? 'disabled'">	
	 			
	 			<!-- paging.number : 현재페이지  -->
	 			<a class="page-link" th:href="@{|?page=${paging.number-1}|}">
	 			이전 </a>	
	 		</li>
	 		
	 		<!-- 첫 페이지 부터 마지막 페이지까지 루프를 돌려서 출력  -->
	 		<li th:each="page : ${#numbers.sequence(0,paging.totalPages-1)}"
	 			th:if="${page >= paging.number-5 and page <= paging.number+5}"
	 			th:classappend="${page==paging.number} ? 'active'" class="page-item"
	 		>
	 		
	 			<a th:text=${page} class="page-link" th:href="@{|?page=${page}|}"></a>
	 		</li>
	 		
	 		<!-- 다음을 처리하는 블락 --> 
	 		<li class="page-item" th:classappend="${!paging.hasNext} ? 'disabled'">
	 			<a class="page-link" th:href="@{|?page=${paging.number+1}|}">
	 				다음
	 			</a>
	 		</li>
	 	</ul>
	 </div> 
	 <!--  페이징 처리 끝  -->
	
		<a th:href="@{/user_insert}" class="btn btn-primary">회원 등록 </a>
</div>




</html>